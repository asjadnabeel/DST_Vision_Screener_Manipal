<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Option 1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/lblOption1"
            android:layout_weight="1"
            android:gravity="center_horizontal|center" />

        <EditText
            android:id="@+id/username"
            android:inputType="textEmailAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Option 1 Input"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Option 2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/lblOption2"
            android:layout_weight="1"
            android:gravity="center" />

        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:hint="Option 2 Input"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/dialogOptionsCancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Cancel "
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/image"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:transformPivotX="70dp" />

        <Button
        android:id="@+id/dialogOptionsOK"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=" Ok "
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/dialogOptionsCancel"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>